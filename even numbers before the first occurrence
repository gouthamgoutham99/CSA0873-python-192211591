def print_even_before_20(numbers):
    """Print even numbers before the first occurrence of 20 in the list."""
    for num in numbers:
        if num == 20:
            break
        if num % 2 == 0:
            print(num, end=", ")

# Sample Input
numbers = [10, 12, 15, 18, 20, 22, 24, 30]

# Print even numbers before the first occurrence of 20
print_even_before_20(numbers)
